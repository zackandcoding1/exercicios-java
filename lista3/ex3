import java.util.ArrayList;
import java.util.Scanner;

public class Main {
    private static Scanner keyboard;

    public static void main(String[] args) {
        ArrayList<Integer> valores = new ArrayList<Integer>();
        
        keyboard = new Scanner(System.in);
        int valor;
        
        while (true) {
            System.out.println("Insira um valor(0 para sair): ");
            valor = keyboard.nextInt();
            
            if (valor == 0) {
                break;
            }
            
            valores.add(valor);
            System.out.println(valores);
            System.out.println("MÃ©dia aritmetica: "+obterMediaAritmetica(valores));
                       
        }
        
    }
    
    static double obterMediaAritmetica(ArrayList<Integer> valores) {
        float total = 0;
        for(int i = 0; i <= valores.size() - 1; i++) {
            total+= valores.get(i);

        }
        return total/valores.size();
    }
    
}
